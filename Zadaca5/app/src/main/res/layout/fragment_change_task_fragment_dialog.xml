<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/marginLarge"
        android:paddingEnd="@dimen/marginLarge"
        android:orientation="vertical">

    <TextView
            android:id="@+id/newTaskHeading"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/HeadingTextView"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/marginLarge"
            android:text="@string/change_task"/>

    <EditText
            android:id="@+id/taskTitleChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginLarge"
            android:inputType="text"
            android:hint="@string/newTaskTitleInputHint"
            tools:ignore="Autofill"/>
    <EditText
            android:id="@+id/taskDescriptionChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginLarge"
            android:inputType="text"
            android:hint="@string/newTaskDescriptionInputHint"
            tools:ignore="Autofill"/>
    <Spinner
            android:id="@+id/prioritySelectorChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/priorities"
            android:layout_marginTop="@dimen/marginLarge"/>
    <Button
            android:id="@+id/btnSaveTaskChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginLarge"
            android:layout_marginBottom="@dimen/marginLarge"
            android:layout_gravity="center"
            android:background="@color/green"
            android:textSize="25sp"
            android:text="@string/save_changes"/>

</LinearLayout>